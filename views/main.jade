doctype html
head
    block head
        meta(name="viewport",content="width=device-width, initial-scale=1")
        link(rel="stylesheet", type="text/css" ,href='/css/bootstrap.min.css')
        link(rel="stylesheet", type="text/css" ,href='/css/base.css')
        script(type='text/javascript',src='/js/jquery.min.js')
html(lang='zh')
    body
        div#wrap
            div#header
                div.container
                    a.logo(href='/') hZUEd
                    ul.nav.navbar-nav
                        li
                            a(href='/')
                                span.glyphicon.glyphicon-home
                                | 首页
                        li
                            a(href='') 聊天
                    div.user-panel
                        if me
                            span=me.nickname
                            a(class='ml-10',href='/logout') 退出
                        else
                            a(class='ml-10',href="/login") 登录
                            a(class='ml-10',href="/register") 注册
            div#bodyer
                div.container
                    block content
            div#footer
        block script