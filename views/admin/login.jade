extends main

block content
   div#wrap
      div#login
         div(class='col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3')
            form(method='POST',action='/admin/login',class='form-horizontal')
               div.form-group
                  input(type='text',name='name',class='form-control',placeholder='用户名')
               div.form-group
                  input(type='text',name='pass',class='form-control',placeholder='密码')
               div.form-group
                  input(type='submit',value='登陆',class='btn btn-info btn-block')
